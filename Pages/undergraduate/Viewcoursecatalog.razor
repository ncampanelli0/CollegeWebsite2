@page "/undergraduate/viewcoursecatalog"
<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>view course catalog</title>
    {{macro.imports()}}
    <link rel="stylesheet" href="{{url_for('static', filename='stylesheet/style.css')}}" />
    <link rel="stylesheet" href="{{url_for('static', filename='stylesheet/boilerplate.css')}}" />
    <script type="text/javascript" src="{{url_for('static', filename='script/boilerplate.js')}}"></script>
  </head>

<body>

  {{ macro.header() }}

<div>
        <table class = "userTable">
            <thead>
              <th>Crn</th>
              <th>Course Name</th>
              <th>Department</th>
              <th>Description</th>
              <th>Prequisite</th>
              <th>Minimum Requirements</th>
              <th>Type</th>
              <th>Credits</th>
            </thead>
            <tbody>

            {% for courseCatalog in courses %}
                <tr class = "list item">
                <td>{{ courseCatalog.Crn }}</td>
                <td>{{ courseCatalog.CourseName }}</td>
                <td>{{ courseCatalog.Department }}</td>
                <td><button id = "desc{{loop.index}}" class = "btncolor" onclick="getDescription('#desc{{loop.index}}')" data-description = "{{courseCatalog['Description']}}">Description</button></td>
                <td>{{ courseCatalog.Prerequiste }}</td>
                <td>{{ courseCatalog.MinimumRequirements }}</td>
                <td>{{ courseCatalog.Type }}</td>
                <td>{{ courseCatalog.Credits }}</td>
                </tr>
               
                
            {% endfor %}
        </tbody>
        </table>
        <div id = "tablePagination"></div>
    </div>



  {{macro.footer()}}

</body>
  
</html>