@page "/faculty/viewcourses"
<!doctype html>
  <head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>view courses</title>
  </head>

<body>

<div>
        <table class = "userTable">
            <thead>
              <th>CRN</th>
              <th>Course Name</th>
              <th>Type</th>
              <th>Prequisite</th>
              <th>Minimum Requirements</th>
              <th>Department</th>
              <th>Description</th>
              <th>Credits</th>
            </thead>
            <tbody>

            {% for klasses in klass %}
                <tr class = "list item">
                <td>{{ klasses.Crn }}</td>
                <td>{{ klasses.CourseName }}</td>
                <td>{{ klasses.Type }}</td>
                <td>{{ klasses.Prerequiste }}</td>
                <td>{{ klasses.MinimumRequirements }}</td>
                <td>{{ klasses.Department }}</td>
                <td>{{ klasses.Description }}</td>
                <td>{{ klasses.Credits }}</td>
               </tr>
                
            {% endfor %}
        </tbody>
        </table>
        <div id = "tablePagination"></div>
    </div>

</body>