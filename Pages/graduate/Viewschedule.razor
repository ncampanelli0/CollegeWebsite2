@page "/graduate/viewschedule"
<!doctype html>
  <head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>view user schedule</title>
    {{macro.imports()}}
    <link rel="stylesheet" href="{{url_for('static', filename='stylesheet/style.css')}}" />
    <link rel="stylesheet" href="{{url_for('static', filename='stylesheet/viewuserschedule.css')}}" />
    <script type="text/javascript" src="{{url_for('static', filename='script/viewuserschedule.js')}}"></script>
  </head>

<body>

  {{ macro.header() }}

        <!-- flip the headers and the rows if there is extra time -->
        <!-- -Nick -->


    Credits Earned: {{userSchedule.CreditsEarned}}
    <div>
        <table>
            <thead>
                {% for x in range(0, userSchedule["Schedule"]|length) %}
                <tr>
                <th>{{ userSchedule["SchedulePlainText"][x] }} ( id: {{ userSchedule["Schedule"][x] }} )</th>
                <td>{{ userSchedule["ScheduleGrades"][x] }}</td>
                </tr>
                {% endfor %}
                <tr>
                <th>latest semester (above)------------- transcript (below)</th>
                <td>-------------</td>
                </tr>
                {% for x in range(0, userSchedule["Transcript"]|length) %}
                    <tr>
                    <th>{{ userSchedule["TranscriptPlainText"][x] }} ( id: {{ userSchedule["Transcript"][x] }} )</th>
                    <td>{{ userSchedule["TranscriptGrades"][x] }}</td>
                    </tr>
                {% endfor %}
            </thead>
            <tbody>
        </tbody>
        </table>
  {{macro.footer()}}

</body> 
</html>