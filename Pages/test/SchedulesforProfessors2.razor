                queryClasses[counter].ProfLastName = x.LastName;
                queryClasses[counter].ProfessorName = $"{x.FirstName} {x.LastName}";
                counter++;
            }

            if (x.PartOrFullTime == "Full Time" && x.AccountType == "Faculty" && x.Department == queryClasses[counter].Department && queryClasses[counter].StartDate.Year == year && queryClasses[counter].Semester == semester)
            {
                queryClasses[counter].ProfFirstName = x.FirstName;
                queryClasses[counter].ProfLastName = x.LastName;
                queryClasses[counter].ProfessorName = $"{x.FirstName} {x.LastName}";
                mongo.UpsertRecord<Classes>("classes", queryClasses[counter].Id, queryClasses[counter]);
                counter++;

                if (x.PartOrFullTime == "Full Time" && x.AccountType == "Faculty" && x.Department == queryClasses[counter].Department)
                {
                    queryClasses[counter].ProfFirstName = x.FirstName;
                    queryClasses[counter].ProfLastName = x.LastName;
