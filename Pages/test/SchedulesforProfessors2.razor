    private void writeProfessorSchedulesToTranscript()
    {

        var tempFirst = "no data stored";
        var tempLast = "no data stored";
        var queryClasses = mongo.LoadRecord<Classes>("classes");

        Console.WriteLine("running writeProfessorSchedulesToTranscript");

        foreach (var x in queryClasses)
        {
            var queryUserFirst = mongo.LoadRecordByString<AllUser>("allUser", "FirstName", x.ProfFirstName);
            var queryUserLast = mongo.LoadRecordByString<AllUser>("allUser", "LastName", x.ProfLastName);

            if (queryUserFirst.FirstName == queryUserLast.FirstName && queryUserFirst.LastName == queryUserLast.LastName)
            {
                List<Transcript> transcript = new List<Transcript> {};

                Transcript transcriptToAdd = new Transcript
                {
                        Building = x.BuildingID,
                        CourseName = x.CourseName,
                        CourseID = x.CourseID,
                        Credits = x.Credits,
                        CRN = x.CRN,
                        EndDate = x.EndDate,
                        Grade = "IP",
                        RoomID = x.RoomID,
                        Semester = x.Semester,
                        StartDate = x.StartDate
                };
                try
                {
                    Console.WriteLine("try");
                    transcript.Add(transcriptToAdd);

                    queryUserLast.Transcript = transcript.ToArray();

                    mongo.UpsertRecord<AllUser>("allUser", queryUserLast.Id, queryUserLast);

                    transcript.Clear();
                }
                catch
                {
