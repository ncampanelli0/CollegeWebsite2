    private void assignProfessorsToClass(int year, string semester)
    {

        var queryUser = mongo.LoadRecordSortedDes<AllUser>("allUser", "Department");
        var queryClasses = mongo.LoadRecordSortedDes<Classes>("classes", "Department");
        Console.WriteLine("running assignProfessorsToClass");

        int counter = 0;

        foreach (var x in queryUser)
        {

            if (x.PartOrFullTime == "Part Time" && x.AccountType == "Faculty" && x.Department == queryClasses[counter].Department && queryClasses[counter].StartDate.Year == year && queryClasses[counter].Semester == semester)
            {
                queryClasses[counter].ProfFirstName = x.FirstName;
                queryClasses[counter].ProfLastName = x.LastName;
                queryClasses[counter].ProfessorName = $"{x.FirstName} {x.LastName}";
                counter++;
            }

            if (x.PartOrFullTime == "Full Time" && x.AccountType == "Faculty" && x.Department == queryClasses[counter].Department && queryClasses[counter].StartDate.Year == year && queryClasses[counter].Semester == semester)
            {
                queryClasses[counter].ProfFirstName = x.FirstName;
                queryClasses[counter].ProfLastName = x.LastName;
                queryClasses[counter].ProfessorName = $"{x.FirstName} {x.LastName}";
                mongo.UpsertRecord<Classes>("classes", queryClasses[counter].Id, queryClasses[counter]);
                counter++;

                if (x.PartOrFullTime == "Full Time" && x.AccountType == "Faculty" && x.Department == queryClasses[counter].Department)
                {
                    queryClasses[counter].ProfFirstName = x.FirstName;
                    queryClasses[counter].ProfLastName = x.LastName;
                    queryClasses[counter].ProfessorName = $"{x.FirstName} {x.LastName}";
                    counter++;
                }

            }


            mongo.UpsertRecord<Classes>("classes", queryClasses[counter].Id, queryClasses[counter]);
        }


        Console.WriteLine("table updated");
    }


    private void assignProfessorsToClass(int year, string semester, string department)
    {
        var queryUser = mongo.FilterCollectionByString<AllUser>("allUser", "Department", department);
        var queryClasses = mongo.FilterCollectionByString<Classes>("classes", "Department", department);

